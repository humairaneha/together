<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/toolbar_color" />
            </shape>
        </rotate>
    </item>
    <item android:left="16dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/toolbar_color" />
            <corners android:topRightRadius="10dp" android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp" android:topLeftRadius="0dp" />
        </shape>
    </item>
</layer-list>